@model Teatastic.Models.Order
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer


<h1>@Localizer["Thank you for your order!"]</h1>

<h5 class="mt-5">Order Id: @Model.Id</h5>
<table class="table">
    <thead>
        <tr>
            @*<th></th>*@
            <th>@Localizer["Tea"]</th>
            <th>@Localizer["Price"]</th>
            <th>@Localizer["Quantity"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            var itemTotal = item.Tea.Price * item.Quantity;
            <tr>
                @*<td>
                    <a class="a-cleanup" asp-controller="Teas" asp-action="Details" asp-route-id="@item.Id"><img src="@item.Tea.ImageUrl" style="height: 4em"></a>
                </td>*@
                <td>
                    <a class="a-cleanup" asp-controller="Teas" asp-action="Details" asp-route-id="@item.Id">@item.Tea.Name</a>
                </td>
                <td>
                    @itemTotal.ToString("c")
                </td>
                <td>
                    @item.Quantity
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
    <td></td>
    <td class="text-right">
        <strong>@Localizer["Total"]:</strong>
    </td>
    <td>
        <strong>@Model?.OrderTotal.ToString("c")</strong>
    </td>
    <td></td>
    </tfoot>
</table>

